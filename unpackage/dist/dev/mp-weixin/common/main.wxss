














/*每个页面公共css */

page {
	/* 定义根节点的最小高度为整个窗口的高度 */
	min-height: 100vh;
	background-color: #eee;
	font-size: 28rpx;
	color: #333;
}

.box {
	background-color: #fff;
	padding: 20rpx;
	border-radius: 10rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, .1);
}

.my-button-primary {
	height: 70rpx; 
	line-height: 70rpx;
	background-color: #006eff !important; 
	font-size: 28rpx;
}

.my-button-danger {
	height: 70rpx; 
	line-height: 70rpx;
	background-color: #ef4242 !important; 
	font-size: 28rpx;
}
